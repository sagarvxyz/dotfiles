// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "language_models": {
    "openai": {
      "version": "1",
      "api_url": "http://mgp.local.dev.netflix.net:9123/proxy/svelagala"
    },
    "anthropic": {
      "version": "1",
      "api_url": "http://mgp.local.dev.netflix.net:9123/proxy/svelagala"
    }
  },
  "ssh_connections": [
    {
      "host": "svelagala.workbench.prod.netflix.net",
      "projects": [
        {
          "paths": ["/root"]
        },
        {
          "paths": ["/root/ei"]
        }
      ]
    }
  ],
  "vim_mode": true,
  "ui_font_family": "Berkeley Mono",
  "buffer_font_family": "Berkeley Mono",
  "ui_font_size": 14,
  "icon_theme": null,
  "buffer_font_size": 13,
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine Moon"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-thinking-latest"
    },
    "enabled": true
  },
  "relative_line_numbers": true,
  "format_on_save": "on",
  "hard_tabs": true,
  "tab_size": 4,
  "code_actions_on_format": {
    "source.organizeImports": true
  },
  "formatter": "auto"
}
