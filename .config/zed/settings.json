// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // EDITOR CONFIG
  "vim_mode": true,
  "ui_font_family": "Berkeley Mono",
  "buffer_font_family": "Berkeley Mono",
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "buffer_line_height": "standard",
  "vertical_scroll_margin": 8,
  "relative_line_numbers": true,
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine Moon"
  },
  "format_on_save": "on",
  "indent_guides": {
    "enabled": false
  },
  "code_actions_on_format": {
    "source.organizeImports": true
  },
  "tab_size": 2,
  "title_bar": { "show_branch_icon": true, "show_project_items": true },
  "tab_bar": {
    "show_tab_bar_buttons": false,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true
  },
  "toolbar": {
    "quick_actions": false
  },
  "collaboration_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "project_panel": {
    "entry_spacing": "standard",
    "indent_guides": { "show": "never" },
    "indent_size": 12,
    "hide_root": true
  },
  "terminal": {
    "shell": "system",
    "line_height": "standard",
    "max_scroll_history_lines": 100000
  },

  // LANGUAGES
  "languages": {
    "SQL": {
      "format_on_save": "language_server"
    }
  },

  // AI CONFIG
  "disable_ai": true,
  "language_models": {
    "openai": {
      "api_url": "http://mgp.local.dev.netflix.net:9123/proxy/svelagala"
    },
    "anthropic": {
      "api_url": "http://mgp.local.dev.netflix.net:9123/proxy/svelagala"
    }
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-thinking-latest"
    },
    "enabled": true
  },
  "ssh_connections": [
    {
      "host": "dse-efficiency-insights.workbench.prod.netflix.net",
      "projects": [
        {
          "paths": [
            "/root"
          ]
        },
        {
          "paths": [
            "/root/ei"
          ]
        }
      ],
      "nickname": "workbench-ei"
    }
  ],
  "features": {
    "edit_prediction_provider": "none"
  },
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false
  }
}
